.search {
    width: 750rpx;
    height: 150rpx;
    background-color: #f5f5f5;
}

.search-box {
    width: 525rpx;
    height: 90rpx;
    margin: 30rpx;
    border-radius: 15rpx;
    background-color: #fff;
}

.search-icon {
    width: 30rpx;
    height: 30rpx;
    margin: 30rpx;
}

.search-input {
    width: 345rpx;
    font-size: 26.25rpx;
}

.search-button,.search-input {
    height: 90rpx;
    line-height: 90rpx;
}

.search-button {
    width: 135rpx;
    margin: 30rpx 0;
    font-size: 30rpx;
    text-align: center;
    border-radius: 15rpx;
    color: #fff;
    background-color: #eb82a0;
}

.tip-list {
    width: 750rpx;
    height: 90rpx;
}

.tip-item {
    width: 315rpx;
    height: 30rpx;
    margin: 30rpx;
    font-size: 22.5rpx;
    line-height: 30rpx;
    color: #da504f;
}

.hot {
    width: 750rpx;
}

.hot-box {
    margin: 30rpx;
}

.hot-title {
    width: 510rpx;
    font-size: 26.25rpx;
    line-height: 30rpx;
    font-weight: 700;
}

.hot-list {
    flex-wrap: wrap;
    width: 690rpx;
    padding: 0 30rpx;
}

.hot-item {
    width: 150rpx;
    height: 60rpx;
    margin: 7.5rpx;
    font-size: 26.25rpx;
    line-height: 60rpx;
    text-align: center;
    border: 1rpx solid #ddd;
    border-radius: 7.5rpx;
}

.hot-button {
    width: 210rpx;
    height: 90rpx;
    margin-left: 300rpx;
}

.hot-button-icon {
    width: 30rpx;
    height: 30rpx;
    padding: 30rpx 15rpx;
}

.hot-button-text {
    width: 90rpx;
    height: 90rpx;
    font-size: 26.25rpx;
    line-height: 90rpx;
}

.record {
    width: 750rpx;
    border-top: 15rpx solid #f5f5f5;
}

.record-box {
    margin: 30rpx;
}

.record-title {
    width: 510rpx;
    font-size: 26.25rpx;
    line-height: 30rpx;
    font-weight: 700;
}

.record-clear {
    width: 135rpx;
    font-size: 22.5rpx;
    line-height: 30rpx;
    text-align: right;
    color: #888;
}

.record-icon {
    width: 30rpx;
    height: 30rpx;
    margin-left: 15rpx;
}

.record-list {
    width: 750rpx;
}

.record-item {
    margin: 30rpx;
    font-size: 26.26rpx;
    line-height: 30rpx;
}

.tab-list {
    width: 450rpx;
    height: 60rpx;
    margin-top: 30rpx;
    margin-left: 150rpx;
    border: 1rpx solid #eb82a0;
    border-radius: 30rpx;
}

.tab-item {
    width: 225rpx;
    height: 60rpx;
    font-size: 30rpx;
    line-height: 60rpx;
    text-align: center;
    color: #eb82a0;
}

.chat-item {
    width: 630rpx;
    margin: 30rpx;
    padding: 15rpx 30rpx;
    border-radius: 15rpx;
    box-shadow: 0 0 30rpx #ccc;
}

.dialogue-item {
    width: 630rpx;
    margin: 30rpx 0;
}

.dialogue-item-icon {
    width: 45rpx;
    height: 45rpx;
}

.dialogue-item-text {
    width: 480rpx;
    margin: 0 30rpx;
    font-size: 30rpx;
    line-height: 45rpx;
}

.dialogue-item-copy {
    width: 45rpx;
    height: 45rpx;
}

.chat-item-lock {
    width: 120rpx;
    height: 120rpx;
    margin: 15rpx 0;
}

.chat-item-title {
    width: 510rpx;
    height: 60rpx;
    margin-top: 15rpx;
    font-size: 30rpx;
    line-height: 60rpx;
    text-align: center;
}

.chat-item-buy {
    width: 150rpx;
    height: 60rpx;
    margin-left: 150rpx;
}