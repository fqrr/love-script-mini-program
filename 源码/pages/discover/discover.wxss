.search {
    width: 690rpx;
    height: 60rpx;
    margin: 15rpx 30rpx;
    border-radius: 30rpx;
    background-color: #eee;
}

.search-icon {
    width: 30rpx;
    height: 30rpx;
    margin: 15rpx 30rpx;
}

.search-text {
    width: 570rpx;
    height: 60rpx;
    font-size: 30rpx;
    line-height: 60rpx;
    color: #888;
}

.banner {
    width: 690rpx;
    height: 390rpx;
    margin: 15rpx 30rpx;
    border-radius: 15rpx;
}

.title {
    width: 690rpx;
    height: 30rpx;
    margin-top: 30rpx;
    margin-left: 30rpx;
    font-size: 30rpx;
    line-height: 30rpx;
    font-weight: 700;
}

.topic-list {
    padding-left: 15rpx;
    border-bottom: 15rpx solid #eee;
}

.topic-item {
    width: 210rpx;
    height: 135rpx;
    margin: 30rpx 15rpx;
}

.topic-item-image {
    width: 210rpx;
    height: 135rpx;
    border-radius: 15rpx;
}

.title-text {
    width: 600rpx;
    margin-left: 30rpx;
    font-weight: 700;
}

.title-more,.title-text {
    height: 30rpx;
    margin-top: 30rpx;
    font-size: 30rpx;
    line-height: 30rpx;
}

.title-more {
    width: 90rpx;
    text-align: right;
    color: #888;
}

.test-list {
    white-space: nowrap;
    border-bottom: 15rpx solid #eee;
}

.test-item {
    position: relative;
    display: inline-block;
    width: 270rpx;
    height: 180rpx;
    margin: 30rpx 0 30rpx 30rpx;
}

.test-item-image {
    width: 270rpx;
    height: 180rpx;
    border-radius: 15rpx;
}

.test-item-title {
    position: absolute;
    top: 60rpx;
    left: 30rpx;
    width: 210rpx;
    height: 60rpx;
    font-size: 22.5rpx;
    line-height: 30rpx;
    color: #fff;
    text-align: center;
    white-space: normal;
}

.select-list {
    border-bottom: 15rpx solid #eee;
}

.select-item {
    width: 690rpx;
    margin: 30rpx;
    border-radius: 15rpx;
    background-color: #feedf3;
}

.select-item-title {
    width: 630rpx;
    height: 45rpx;
    padding-top: 30rpx;
    padding-left: 30rpx;
    font-size: 37.5rpx;
    line-height: 45rpx;
    font-weight: 700;
}

.select-item-list {
    padding: 0 15rpx;
}

.select-item-item {
    height: 45rpx;
    margin: 15rpx;
    padding: 0 15rpx;
    font-size: 22.5rpx;
    line-height: 45rpx;
    border-radius: 22.5rpx;
    color: #fff;
    background-color: #ea5f83;
}

.article-list {
    border-bottom: 15rpx solid #eee;
}

.article-item {
    width: 690rpx;
    height: 120rpx;
    margin-left: 30rpx;
    padding: 30rpx 30rpx 30rpx 0;
    border-bottom: 1rpx solid #eee;
}

.article-image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 15rpx;
}

.article-title {
    font-size: 30rpx;
    font-weight: 700;
}

.article-count,.article-title {
    width: 540rpx;
    height: 60rpx;
    margin-left: 30rpx;
    line-height: 60rpx;
}

.article-count {
    font-size: 22.5rpx;
    color: #888;
}

.article-count-text {
    width: 270rpx;
}

.chat-item-lock {
    width: 120rpx;
    height: 120rpx;
    margin: 15rpx 0;
}

.chat-item-title {
    width: 510rpx;
    height: 60rpx;
    margin-top: 15rpx;
    font-size: 30rpx;
    line-height: 60rpx;
    text-align: center;
}

.chat-item-buy {
    width: 150rpx;
    height: 60rpx;
    margin-left: 150rpx;
}

.test-count-chat {
    width: 270rpx;
    text-align: right;
}