.banner {
    width: 750rpx;
    height: 280rpx;
}

.search {
    width: 750rpx;
    height: 150rpx;
    background-color: #f5f5f5;
}

.search-box {
    width: 525rpx;
    height: 90rpx;
    margin: 30rpx;
    border-radius: 15rpx;
    background-color: #fff;
}

.search-icon {
    width: 30rpx;
    height: 30rpx;
    margin: 30rpx;
}

.search-input {
    width: 345rpx;
    height: 1.4rem;
    padding: calc(45rpx - .7rem) 0;
    font-size: 26.25rpx;
    line-height: 1.4rem;
    color: #888;
}

.search-button {
    width: 135rpx;
    height: 90rpx;
    margin: 30rpx 0;
    font-size: 30rpx;
    line-height: 90rpx;
    text-align: center;
    border-radius: 15rpx;
    color: #fff;
    background-color: #eb82a0;
}

.title {
    width: 690rpx;
    margin: 30rpx;
    font-size: 26.25rpx;
    line-height: 30rpx;
    font-weight: 700;
}

.interesting-list {
    flex-wrap: wrap;
}

.interesting-item {
    width: 216rpx;
    height: 98rpx;
    margin-bottom: 30rpx;
    margin-left: 22.5rpx;
}

.article-item {
    width: 690rpx;
    height: 150rpx;
    margin: 0 30rpx;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #f4f4f4;
}

.article-image {
    width: 225rpx;
    height: 150rpx;
    border-radius: 15rpx;
}

.article-title {
    width: 420rpx;
    height: 90rpx;
    margin-left: 30rpx;
    font-size: 30rpx;
    line-height: 45rpx;
    font-weight: 700;
}

.article-count {
    width: 405rpx;
    height: 30rpx;
    margin-top: 30rpx;
    margin-left: 30rpx;
    font-size: 26.25rpx;
    line-height: 30rpx;
    text-align: right;
    color: #888;
}

.lock-item-lock {
    width: 120rpx;
    height: 120rpx;
    margin: 15rpx 0;
}

.lock-item-title {
    width: 510rpx;
    height: 60rpx;
    margin-top: 15rpx;
    font-size: 30rpx;
    line-height: 60rpx;
    text-align: center;
}

.lock-item-buy {
    width: 150rpx;
    height: 60rpx;
    margin-left: 150rpx;
}